# Application
APP_NAME=Billing Core
DEBUG=false
CORS_ORIGINS=["*"]

# Database
DATABASE_URL=postgresql+asyncpg://billing_user:billing_password@localhost:5432/billing_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT
SECRET_KEY=local-secret-key-for-python-billing-project
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
BOT_SECRET_TOKEN=your-super-secret-bot-token-min-32-chars

# Payment Gateway
YOOMONEY_CLIENT_ID=
YOOMONEY_CLIENT_SECRET=
YOOMONEY_REDIRECT_URI=http://localhost:8000/api/v1/payments/yoomoney/callback=true

# Telegram
TELEGRAM_BOT_TOKEN=

# Notifications
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=60

# Payment retry
PAYMENT_RETRY_ATTEMPTS=3
PAYMENT_RETRY_DELAY=300

# Subscription renewal
RENEWAL_CHECK_INTERVAL=3600

# Database connection settings (for docker-compose)
POSTGRES_USER=billing_user
POSTGRES_PASSWORD=billing_password
POSTGRES_DB=billing_db

# Application port
PORT=8000
